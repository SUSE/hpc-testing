DEFAULT_MPI_FLAVOURS="mvapich2,mpich,openmpi,openmpi2,openmpi3,openmpi4"
export MPI_FLAVOURS=${MPI_FLAVOURS:-$DEFAULT_MPI_FLAVOURS}

test_mpi()
{
	local flavor=$1
	local host=$2
	local ip1=$3
	local ip2=$4
	export RUN_ARGS=""

	case $flavor in
		openmpi|openmpi2)
			RUN_ARGS="${RUN_ARGS} --allow-run-as-root"
			;;
		openmpi3|openmpi4)
			RUN_ARGS="${RUN_ARGS}  --allow-run-as-root --oversubscribe"
			;;
	esac
	RUN_ARGS="--host $ip1,$ip2 -np 2 ${RUN_ARGS}"
	ENV_ARGS=""
	if [ "$IN_VM" == "1" ]; then
		# MVAPICH2 fails to use process affinity as core are reported with weird IDs
		# Disable affinity in VMs to work around this
		ENV_ARGS="MV2_ENABLE_AFFINITY=0 "
	fi
	tp $host "$ENV_ARGS VERBOSE=1 RUN_ARGS='$RUN_ARGS' SHORT=1 /usr/lib64/mpi/gcc/$flavor/tests/runtests.sh"
}

mpi_get_flavors()
{
	local host=$1
	local flavours=$2
	case $(get_suse_version $host) in
		15|15.1)
			flavours=$(echo $flavours | sed -e 's/openmpi,//g' -e 's/openmpi$//g' |
						   sed -e 's/openmpi3,//g' -e 's/openmpi3$//g' |
						   sed -e 's/openmpi4,//g' -e 's/openmpi4$//g')
			;;
		15.2|15.3)
			flavours=$(echo $flavours | sed -e 's/openmpi,//g' -e 's/openmpi$//g' |
						   sed -e 's/openmpi4,//g' -e 's/openmpi4$//g')
			;;
		15.4)
			flavours=$(echo $flavours | sed -e 's/openmpi,//g' -e 's/openmpi$//g')
			;;
		12.3|12.4|12.5)
			flavours=$(echo $flavours | sed -e 's/openmpi2,//g' -e 's/openmpi2$//g' |
						   sed -e 's/openmpi3,//g' -e 's/openmpi3$//g' |
						   sed -e 's/openmpi4,//g' -e 's/openmpi4$//g' |
						   sed -e 's/mpich,//g' -e 's/mpich$//g')
			;;
		*)
			# N/A
			true
			;;
	esac
	echo $flavours
}
