get_port()
{
	local host=$1
	local host_id=$2
	local eth=$(eval echo \$IPPORT$host_id)

	tp $host "rdma link del rxe0 || true"
	tp $host "rdma link add rxe0 type rxe netdev $eth"

	res=$(tpq $host "rdma link show" | grep $eth)
	if [ "$res" == "" ]; then
		fatal_error "Failed to find an active port on $host"
	fi

	ip=$(echo $res | awk '{ print $5}')
	rxe=$(echo $res | awk '{ print $2}' | sed -e 's/\/.*//')
	port=$(echo $res | awk '{ print $2}' | sed -e 's/.*\///')

	eval export HCA$host_id=$rxe
	eval export IBPORT$host_id=$port

	ip=$(tpq $host "ip addr show $eth" | ip_addr_show_to_ip)
	eval export IP$host_id=$ip

	juLogSetProperty $host.ip_if $ip
	juLogSetProperty $host.port $rxe

	echo "[SUCCESS] Host $host uses interface $rxe."
}
